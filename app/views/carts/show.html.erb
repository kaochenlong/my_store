<h1>
  購物車
  <%= link_to '清空購物車', cart_path, method: 'delete', data:{ confirm:'你確定嗎?' }, class:'btn btn-xs btn-success' %>
</h1>

<table class="table">
  <thead>
    <tr>
      <td>商品名稱</td>
      <td>數量</td>
      <td>單價</td>
      <td>小計</td>
    </tr>
  </thead>

  <tbody>
    <% @cart.items.each do |item| %>
    <tr>
      <td><%= item.product.name %></td>
      <td><%= item.quantity %></td>
      <td><%= item.product.price %></td>
      <td><%= item.price %></td>
    </tr>
    <% end %>
  </tbody>

  <tfood>
    <tr>
      <td colspan="3">總計</td>
      <td><%= @cart.total_price %></td>
    </tr>
  </tfood>
</table>

<%= link_to '繼續選購', root_path, class:'btn btn-primary' %>
<%= link_to '結帳', '#', class:'btn btn-danger' unless @cart.empty? %>

